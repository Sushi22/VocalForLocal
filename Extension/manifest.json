{
  "name": "VocalForlocal",
  "version": "1.0",
  "description": "Boycott Videshi, Buy Swadeshi",
  "page_action": {
    "default_title": "Google Mail"
    
  },
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "content_scripts":[
    {
      "matches": ["https://www.amazon.in/*"],
      "js": ["content.js","jquery-3.5.1.min.js"]
      
    }
  ],

  "background":{
    "scripts":[ "eventPage.js"],
    "persistent": false
    
  },
 
  "manifest_version": 2,
 
  "permissions":[
    "activeTab",
    "notifications",
    "https://www.amazon.in/*",
    "https://localhost:5000/details"
  ]
}
